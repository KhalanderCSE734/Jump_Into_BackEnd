<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome To EJS</title>
</head>
<body>
   
    <h1>URL Shortener</h1>
    <form method="post" action="/url">
        <label for="input">Enter Your URL</label>
        <input type="text" name="url" id="input" autocomplete="off" placeholder="https://example.com"/>
        <button type="submit">Generate ShortUrl</button>
    </form>

    <% if(locals.id){ %>
        <p> URL Generated: http://localhost:8000/example/<%= id %> </p>
    <% } %>

        <br/>

    <% if (locals.urls) { %>
        <table>
            <thead>
                <tr>
                    <th> Sl.No</th>
                    <th> ShortId</th>
                    <th> Redirect URL</th>
                    <th> Number Of Visits</th>
                </tr>
            </thead>
            <tbody>
                <% urls.forEach((url,ind) => { %>
                 
                    <tr>
                        <td> <%= ind+1 %> </td>
                        <td> <%= url.shortId %> </td>
                        <td> <%= url.redirectUrl %> </td>
                        <td> <%= url.visitHistory.length %> </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>
    

</body>
</html>

